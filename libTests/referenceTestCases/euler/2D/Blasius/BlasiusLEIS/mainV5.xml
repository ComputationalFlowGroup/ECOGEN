<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<computationParam>
  <run>EulerBlasiusLEIS</run>
  <outputMode format="XML" binary="false" precision="10"/>
  
  <timeControlMode iterations="false">
    <iterations number="1" iterFreq="1"/>
    <physicalTime totalTime="7.e-3" timeFreq="1.e-4"/>
  </timeControlMode>
	
  <computationControl CFL="0.4"/>

  <secondOrder>
    <globalLimiter>vanleer</globalLimiter>
  </secondOrder>

  <gradient> 
    <method>finite-difference</method>
  </gradient>

</computationParam>