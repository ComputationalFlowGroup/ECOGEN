    <!--  LIST OF STATES  -->
    <state name="air">
        <material type="fluid" EOS="IG_airBlasiusTurbulent.xml">
            <dataFluid density="1.2" pressure="1.e5">
                <velocity x="0." y="0." z="0."/>
            </dataFluid>
        </material>
    </state>

</CI>
