<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains> 
        <domain name="base" state="air" type="entireDomain"/>
        <!-- <domain name="base" state="air" type="entireDomain" physicalEntity="10"/> -->
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <!-- Requires hard-coded symmetry boundary condition before the flat plate, see MeshCartesian.cpp -->
        <boundCond name="CLXm" type="injection" number="1">
            <dataInjection m0="122.4"/>
            <dataFluid density="1.2" pressure="1.e5"/>
        </boundCond>

        <boundCond name="CLXp" type="outflow" number="2">
            <dataOutflow p0="1.e5"/>
        </boundCond>

        <boundCond name="CLYm" type="wall" number="3"/>

        <boundCond name="CLYP" type="outflow" number="4">
            <dataOutflow p0="1.e5"/>
        </boundCond>
    </boundaryConditions>

    <!-- Unstructured mesh -->
